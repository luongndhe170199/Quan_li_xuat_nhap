<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grocery_store</title>

    <!-- Import Bootstrap 5 từ CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Thêm Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />

    <!-- CSS tùy chỉnh -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Grocery_store.styles.css" asp-append-version="true" />
    <style>
        /* Tùy chỉnh phong cách tổng thể */
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background-color: #343a40; /* Thêm nền tối cho navbar */
            padding: 10px 20px;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #ffffff !important;
                font-weight: 500;
            }

                .navbar .navbar-brand:hover,
                .navbar .nav-link:hover {
                    color: #ffdd57 !important; /* Hiệu ứng hover cho link */
                }

                /* Tùy chỉnh hiển thị của mục đang active */
                .navbar .nav-link.active {
                    background-color: #ffdd57; /* Nền vàng cho trạng thái active */
                    color: #343a40 !important; /* Màu chữ tối */
                    font-weight: 600; /* In đậm hơn */
                    border-radius: 5px; /* Bo góc */
                }

        /* Footer tùy chỉnh */
        footer {
            background-color: #343a40;
            padding: 20px 0;
            text-align: center;
            color: #ffffff;
        }

            footer a {
                color: #ffdd57 !important;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Căn chỉnh phần main */
        main {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        /* Nút tùy chỉnh */
        .btn-primary {
            background-color: #ffdd57;
            border: none;
            color: #343a40;
        }

            .btn-primary:hover {
                background-color: #f0c30f;
                color: #343a40;
            }

        /* Footer link hover */
        .footer-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Header với navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Grocery_store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <!-- Thêm class active nếu đang ở Home -->
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <!-- Thêm class active nếu đang ở Product -->
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active" : "")"
                               asp-area="" asp-controller="Product" asp-action="Index">Danh sách sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <!-- Thêm class active nếu đang ở Invoice -->
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Invoice" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Invoice" asp-action="Index">Danh sách hóa đơn</a>
                        </li>
                        <li class="nav-item">
                            <!-- Thêm class active nếu đang ở Customer -->
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Customer" ? "active" : "")"
                               asp-area="" asp-controller="Customer" asp-action="Index">Danh sách khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <!-- Thêm class active nếu đang ở Revenue (trang doanh thu của Invoice) -->
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Invoice" && ViewContext.RouteData.Values["action"].ToString() == "Revenue" ? "active" : "")"
                               asp-area="" asp-controller="Invoice" asp-action="Revenue">Xem Doanh thu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Phần nội dung chính -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Grocery_store - <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Thêm script cần thiết -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Thêm thư viện JS của Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Import jQuery và Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
